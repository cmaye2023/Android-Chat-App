<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fredrikbogg.android_chat_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.fredrikbogg.android_chat_app.App"
        android:allowBackup="true"
        android:icon="@mipmap/chat_icon"
        android:label="@string/mc_firebase_chat"
        android:roundIcon="@mipmap/chat_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.fredrikbogg.android_chat_app.ui.main.MainActivity"
            android:label="@string/mc_firebase_chat"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>